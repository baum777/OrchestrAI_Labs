{
  "name": "agent-system",
  "private": true,
  "version": "0.1.0",
  "license": "MIT",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev:web": "pnpm --filter web dev",
    "dev:api": "pnpm --filter api start",
    "lint": "pnpm -r lint",
    "test": "pnpm -r test",
    "build": "pnpm -r build",
    "test:governance": "tsx scripts/test-governance-integrity.ts",
    "validate:timestamps": "tsx scripts/validate-timestamp-integrity.ts",
    "lint:clock": "eslint . --ext .ts,.tsx --rule 'no-restricted-globals: error' --rule 'no-restricted-syntax: error'"
  },
  "engines": {
    "node": ">=20"
  },
  "packageManager": "pnpm@9.8.0",
  "devDependencies": {
    "tsx": "^4.21.0"
  }
}
