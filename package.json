{
  "name": "agent-system",
  "private": true,
  "version": "0.1.0",
  "license": "MIT",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev:web": "pnpm --filter web dev",
    "dev:api": "pnpm --filter api start",
    "lint": "pnpm -r lint",
    "test": "pnpm -r test",
    "build": "pnpm -r build",
    "test:governance": "tsx scripts/test-governance-integrity.ts",
    "validate:timestamps": "tsx scripts/validate-timestamp-integrity.ts",
    "lint:clock": "eslint . --ext .ts,.tsx",
    "blueprint:check": "ts-node scripts/validate-blueprint.ts",
    "golden-tasks:check": "ts-node scripts/validate-golden-tasks.ts",
    "pr:check": "ts-node scripts/validate-pr-template.ts"
  },
  "engines": {
    "node": ">=20"
  },
  "packageManager": "pnpm@9.8.0",
  "devDependencies": {
    "ts-node": "^10.9.1",
    "tsx": "^4.21.0",
    "typescript": "^5.9.3"
  }
}
