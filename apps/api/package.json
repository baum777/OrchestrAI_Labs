{
  "name": "api",
  "version": "0.1.0",
  "private": true,
  "type": "commonjs",
  "scripts": {
    "start": "node dist/apps/api/src/main.js",
    "start:dev": "ts-node -r tsconfig-paths/register src/main.ts",
    "build": "tsc -p tsconfig.build.json",
    "lint": "eslint .",
    "test": "jest",
    "test:golden": "jest --runTestsByPath test/golden-tasks/golden-tasks.e2e.spec.ts test/golden-tasks/governance-bypass.e2e.spec.ts",
    "test:compliance": "jest test/compliance",
    "test:e2e:db:setup": "ts-node test/db/apply-e2e-schema.ts",
    "test:e2e:db:reset": "ts-node test/db/apply-e2e-schema.ts --reset",
    "test:e2e": "pnpm run test:e2e:db:setup && jest --testPathPattern='e2e.spec.ts'"
  },
  "dependencies": {
    "@agent-system/agent-runtime": "workspace:*",
    "@agent-system/governance": "workspace:*",
    "@agent-system/governance-v2": "workspace:*",
    "@agent-system/knowledge": "workspace:*",
    "@agent-system/shared": "workspace:*",
    "@agent-system/skills": "workspace:*",
    "@agent-system/workflow": "workspace:*",
    "@nestjs/common": "^10.3.0",
    "@nestjs/core": "^10.3.0",
    "@nestjs/platform-express": "^10.3.0",
    "@nestjs/schedule": "^6.1.1",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.3",
    "pg": "^8.12.0",
    "reflect-metadata": "^0.1.13",
    "rxjs": "^7.8.0"
  },
  "devDependencies": {
    "@nestjs/testing": "^11.1.13",
    "@types/express": "^5.0.6",
    "@types/jest": "^30.0.0",
    "@types/pg": "^8.6.0",
    "@types/supertest": "^6.0.3",
    "@typescript-eslint/eslint-plugin": "^6.3.0",
    "@typescript-eslint/parser": "^6.3.0",
    "dotenv": "^17.3.1",
    "eslint": "^8.52.0",
    "jest": "^30.2.0",
    "supertest": "^7.2.2",
    "ts-jest": "^29.4.6",
    "ts-node": "^10.9.1",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.3.0"
  }
}
